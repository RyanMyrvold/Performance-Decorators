{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@node/*": ["./src/*"],
      "@common/*": ["../common/src/*"]
    },
    "experimentalDecorators": true,
    "useDefineForClassFields": true
  },
  "references": [
    { "path": "../common" }
  ],
  "include": ["src"],
  "exclude": ["tests"]
}
