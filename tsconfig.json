{
  "compilerOptions": {
    "target": "ES2020",                        // Supports modern JS features
    "module": "ESNext",                        // ESM module system
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"],                  // Updated to ES2020 and DOM APIs
    "strict": true,                            // Enable strict type-checking
    "experimentalDecorators": true,           // Enable experimental decorators
    "useDefineForClassFields": true,          // Recommended for decorators
    "esModuleInterop": true,                  // Interoperability between CommonJS and ESM
    "forceConsistentCasingInFileNames": true, // Prevent casing inconsistencies
    "skipLibCheck": true,                     // Skip type checking of declaration files
    "declaration": true,                      // Generate .d.ts files
    "sourceMap": true,                        // Generate source maps for debugging
    "removeComments": false                   // Retain comments in output
  },
  "include": [],
  "references": [
    { "path": "./packages/common" },
    { "path": "./packages/node" },
    { "path": "./packages/browser" }
  ]
}